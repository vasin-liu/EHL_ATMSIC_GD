<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
  <filter>
    <filter-name>I18N</filter-name>
    <filter-class>com.appframe.i18n.I18NFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>I18N</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>I18N</filter-name>
    <url-pattern>*.d</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>sessionTimeoutFilter</filter-name>
    <filter-class>com.ehl.login.SessionTimeoutFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>sessionTimeoutFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>operate</filter-name>
    <filter-class>com.ehl.base.OperateFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>operate</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>operate</filter-name>
    <url-pattern>*.d</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>RandomCode</servlet-name>
    <servlet-class>servlet.RandCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AppframeServlet</servlet-name>
    <servlet-class>com.appframe.core.AppframeServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>AppframeServlet</servlet-name>
    <url-pattern>*.d</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AppframeServlet</servlet-name>
    <url-pattern>*.updown</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>initServlet</servlet-name>
    <servlet-class>com.ehl.login.InitServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>DisplayChart</servlet-name>
    <servlet-class>org.jfree.chart.servlet.DisplayChart</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RandomCode</servlet-name>
    <url-pattern>*.img</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AppframeServlet</servlet-name>
    <url-pattern>*.d</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DisplayChart</servlet-name>
    <url-pattern>/chart/DisplayChart</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>180</session-timeout>
  </session-config>
  <mime-mapping>
    <extension>docx</extension>
    <mime-type>application/vnd.openxmlformats-officedocument.wordprocessingml.document</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>xlsx</extension>
    <mime-type>application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</mime-type>
  </mime-mapping>
  <welcome-file-list>
    <welcome-file>loginToGrid.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/exception.jsp</location>
  </error-page>
  <error-page>
    <error-code>304</error-code>
    <location>/exception.jsp</location>
  </error-page>
</web-app>